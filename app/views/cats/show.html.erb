<h1><%= @cat.name %></h1>
<% if flash.now[:errors] %>
  <% flash.now[:errors].each do |error| %>
    <h1>
      <font color="red" style= "background-color:black;">
      <%= error %>
      </font>
    </h1>
  <% end %>
<% end %>
<table>
  <tr>
    <th>Attribute</th>
    <th>Value</th>
  </tr>
  <% [:age, :birth_date, :color, :sex].each do |attr_name| %>
    <tr>
      <td><%= attr_name %></td>
      <td><%= @cat.send(attr_name) %></td>
    </tr>
  <% end %>
</table>

<a href="<%= edit_cat_url(@cat) %>">Edit <%= @cat.name %></a>
<br>
<img src="https://media.giphy.com/media/nNxT5qXR02FOM/giphy.gif" alt="cat">
<h2>Rental Requests</h2>
<table>
  <tr>
    <th>Start Date</th>
    <th>End Date</th>
    <th>Status</th>
  </tr>
  <% @cat.rental_requests.order('start_date').each do |req| %>
    <%= render 'req_tr', req: req %>
  <% end %>
</table>

<form class="" action="<%=cats_url%>" method="get">
  <br>
  Back to cats?
  <br>
  <input type="submit" name="" value="ALL CATS">
</form>
